{
  "private": true,
  "name": "joseph-campuzano-remix",
  "description": "",
  "license": "",
  "scripts": {
    "clean": "rm -rf ./build ./public/build",
    "build": "run-s build:css build:remix",
    "build:remix": "remix build",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --minify",
    "build:deploy": "fly deploy --remote-only",
    "dev": "run-p dev:css dev:remix",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --watch",
    "dev:remix": "remix dev",
    "start": "remix-serve build",
    "lint": "run-s lint:format lint:eslint lint:typecheck",
    "lint:format": "prettier --write ./",
    "lint:eslint": "eslint --ext .tsx,.ts,.js,.jsx .",
    "lint:typecheck": "tsc",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "postinstall": "remix setup node",
    "pre-commit": "run-s lint:staged lint:eslint lint:typecheck"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@remix-run/node": "^1.4.1",
    "@remix-run/react": "^1.4.1",
    "@remix-run/serve": "^1.4.1",
    "date-fns": "^2.28.0",
    "eslint": "^8.6.0",
    "gray-matter": "^4.0.3",
    "marked": "^4.0.14",
    "node-html-parser": "^5.3.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.3.1",
    "remix": "^1.4.1",
    "tailwindcss": "^3.0.11",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@remix-run/dev": "^1.4.1",
    "@remix-run/eslint-config": "^1.4.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.1",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/marked": "^4.0.3",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
